# ============================================
# App Identity
# ============================================
NEXT_PUBLIC_APP_NAME=accounts

# ============================================
# BFEAI Service URLs
# ============================================
NEXT_PUBLIC_ACCOUNTS_URL=http://localhost:3000
NEXT_PUBLIC_PAYMENTS_URL=http://localhost:3003
NEXT_PUBLIC_MAIN_SITE_URL=https://bfeai.com
# Production URLs (for reference):
# NEXT_PUBLIC_ACCOUNTS_URL=https://accounts.bfeai.com
# NEXT_PUBLIC_PAYMENTS_URL=https://payments.bfeai.com

# ============================================
# Supabase Configuration
# Get these from core team or Supabase dashboard
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://wmhnkxkyettbeeamuppz.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================
# JWT Configuration
# CRITICAL: Must match across all apps in ecosystem
# Generate with: openssl rand -hex 32
# ============================================
JWT_SECRET=your_jwt_secret_min_32_chars_here
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# ============================================
# Security - Encryption
# Generate with: openssl rand -hex 32
# ============================================
ENCRYPTION_KEY=your_encryption_key_64_hex_chars_here

# ============================================
# Rate Limiting (Upstash Redis)
# Sign up at: https://upstash.com
# ============================================
UPSTASH_REDIS_URL=your_upstash_redis_url_here
UPSTASH_REDIS_TOKEN=your_upstash_redis_token_here

# ============================================
# Bot Protection (Google reCAPTCHA)
# Get from: https://www.google.com/recaptcha/admin
# ============================================
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# ============================================
# Monitoring & Error Tracking (Optional)
# ============================================
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# ============================================
# Analytics (Optional)
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id_here

# ============================================
# Email Service (For password resets, notifications)
# Options: SendGrid, Postmark, AWS SES
# ============================================
EMAIL_FROM=noreply@bfeai.com
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ============================================
# SSO Code Exchange Client Secrets
# For secure code-based SSO token exchange
# Generate with: openssl rand -hex 32
# Each app gets its own secret
# ============================================
SSO_CLIENT_SECRET_KEYWORDS=your_keywords_client_secret_here
SSO_CLIENT_SECRET_PAYMENTS=your_payments_client_secret_here
SSO_CLIENT_SECRET_ADMIN=your_admin_client_secret_here

# ============================================
# Stripe (Billing)
# ============================================
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx

# Subscription Price IDs
STRIPE_PRICE_KEYWORDS_MONTHLY=price_xxx
STRIPE_PRICE_KEYWORDS_YEARLY=price_xxx
STRIPE_PRICE_LABS_BASE_MONTHLY=price_xxx
STRIPE_PRICE_LABS_BASE_YEARLY=price_xxx
STRIPE_PRICE_LABS_AEO_MONTHLY=price_xxx
STRIPE_PRICE_LABS_AEO_YEARLY=price_xxx

# Trial & Bundle
STRIPE_PRICE_TRIAL_SETUP_FEE=price_xxx
STRIPE_PRICE_DUAL_TRIAL_SETUP_FEE=price_xxx
STRIPE_COUPON_BUNDLE_DISCOUNT=coupon_id_xxx

# Test mode: set to "true" to use _TEST variants of all Stripe env vars
STRIPE_TEST_MODE=false
# STRIPE_SECRET_KEY_TEST=sk_test_xxx
# STRIPE_PRICE_DUAL_TRIAL_SETUP_FEE_TEST=price_xxx
# STRIPE_COUPON_BUNDLE_DISCOUNT_TEST=coupon_id_xxx

# ============================================
# Development Settings
# ============================================
NODE_ENV=development
NEXT_PUBLIC_USE_MOCK_AUTH=false
